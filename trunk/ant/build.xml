<?xml version="1.0" encoding="ISO-8859-1"?>

<project name="As2ant - Swf, Swfmill and Mtasc Ant Tasks" basedir="." default="jar">
  
  <property name="src.dir" value="src"/>
  <property name="bin.dir" value="bin"/>
  <property name="dist.dir" value="dist"/>
  <property name="javadocs.dir" value="docs/api"/>
  <property name="samples.dir" value="samples"/>
  
  <target name="clean" description="delete all generated files">
    <delete dir="${bin.dir}" failonerror="false"/>
    <delete dir="${dist.dir}" failonerror="false"/>
  </target>
  
  <target name="compile" description="compiles the tasks">
    <mkdir dir="${bin.dir}"/>
    <javac srcdir="${src.dir}" destdir="${bin.dir}" target="1.3" source="1.3"/>
  </target>
  
  <target name="jar" description="JARs the task" depends="compile">
    <mkdir dir="${dist.dir}"/>
    <jar destfile="${dist.dir}/as2ant.jar" basedir="${bin.dir}"/>
  </target>
  
  <target name="dist" description="generate distribution" depends="clean, jar">
    <mkdir dir="${dist.dir}/src"/>
    <mkdir dir="${dist.dir}/bin"/>
    <mkdir dir="${dist.dir}/samples"/>
    <mkdir dir="${dist.dir}/docs/api"/>
    
    <copy tofile="${dist.dir}/build.xml" file="build.xml"/>
    <copy tofile="${dist.dir}/license.txt" file="license.txt"/>
    <copy tofile="${dist.dir}/readme.txt" file="readme.txt"/>
    <copy tofile="${dist.dir}/changelog.txt" file="changelog.txt"/>
    
    <copy todir="${dist.dir}/src">
      <fileset dir="${src.dir}">
        <include name="**/*.java"/>
      </fileset>
    </copy>
    
    <copy todir="${dist.dir}/bin">
      <fileset dir="${bin.dir}">
        <include name="**/*.class"/>
      </fileset>
    </copy>
    
    <copy todir="${dist.dir}/samples">
      <fileset dir="${samples.dir}">
        <include name="**/*.*"/>
      </fileset>
    </copy>
    
    <copy todir="${dist.dir}/docs/api">
      <fileset dir="${javadocs.dir}">
        <include name="**/*.*"/>
      </fileset>
    </copy>
    
    <zip destfile="as2ant.zip" basedir="${dist.dir}"/>
  </target>
  
  <!--
  <target name="javadoc" description="generate javadocs">
    <mkdir dir="${javadocs.dir}"/>
    <javadoc sourcepath="${src.dir}" destdir="${javadocs.dir}" windowtitle="Swf Ant Tasks" additionalparam="-breakiterator" source="1.0" package="access" author="true" version="true" use="true" defaultexcludes="true"/>
  </target>
  -->
  
</project>