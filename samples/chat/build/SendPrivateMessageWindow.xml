<?xml version="1.0"?>

<beans xmlns:chat="org.as2lib.sample.chat" xmlns:aw="org.aswing" xmlns:ab="org.aswing.border">
	
	<chat:SendPrivateMessageWindow id="sendPrivateMessageWindow" parent="window">
		<messageTextField>b{messageTextField}</messageTextField>
		<aw:JPanel preferredHeight="35" opaque="true" constraints="v{org.aswing.WindowLayout.TITLE}">
			<layout><aw:BorderLayout hgap="0" vgap="0"/></layout>
			<background><aw:ASColor>0x444444</aw:ASColor></background>
			<aw:JLabel text="{messageSource.message[title.sendPrivateMessage]}"
					constraints="v{org.aswing.BorderLayout.SOUTH}" parent="title"/>
		</aw:JPanel>
		<aw:Container constraints="v{org.aswing.WindowLayout.CONTENT}">
			<layout><aw:SoftBoxLayout axis="v{org.aswing.SoftBoxLayout.Y_AXIS}" gap="5"/></layout>
			<border><ab:EmptyBorder><insets><aw:Insets>5, 5, 5, 5</aw:Insets></insets></ab:EmptyBorder></border>
			<aw:JTextField id="messageTextField" eventListener-onKeyDown="d{sendPrivateMessageWindow.sendMessageOnEnter}"/>
			<aw:JPanel>
				<layout><aw:SoftBoxLayout axis="v{org.aswing.SoftBoxLayout.X_AXIS}" gap="5"/></layout>
				<aw:JButton actionListener="d{sendPrivateMessageWindow.sendMessage}" preferredWidth="100"
						preferredHeight="22">
					<text>{messageSource.message[button.ok]}</text>
				</aw:JButton>
				<aw:JButton actionListener="d{sendPrivateMessageWindow.cancel}" preferredWidth="100"
						preferredHeight="22">
					<text>{messageSource.message[button.cancel]}</text>
				</aw:JButton>
			</aw:JPanel>
		</aw:Container>
	</chat:SendPrivateMessageWindow>
	
</beans>